###########################################################################
#                   makefile
###########################################################################

###########################################################################
#                   Macro definitions
###########################################################################

FLAGS  = -Wall -g
CC     = gcc
PROG   = tpso1802
SEMLIB = semlib
OBJS   = ${SEMLIB}.o ${PROG}.o

###########################################################################
#                   Rules
###########################################################################

all:	${PROG}

clean:
	rm ${OBJS} ${PROG} *~
  
${PROG}:	${OBJS}
	${CC} ${FLAGS} ${OBJS} -o $@

.c.o:
	${CC} ${FLAGS} $< -c

###########################################################################

${SEMLIB}.o: ${SEMLIB}.h ${SEMLIB}.c

${PROG}.o: ${SEMLIB}.h ${PROG}.c

${PROG}: ${PROG}.o ${SEMLIB}.o

###########################################################################

